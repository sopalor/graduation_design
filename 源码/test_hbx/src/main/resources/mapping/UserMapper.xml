<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ssm.dao.UserDao">

    <resultMap id="UserBaseMap" type="ssm.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="INTEGER"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="touxiang" property="touxiang" jdbcType="VARCHAR"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
        <result column="isexpert" property="isexpert" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectUserById" parameterType="java.lang.Integer" resultMap="UserBaseMap">
        SELECT * FROM users
        WHERE id = #{userId}
    </select>

    <select id="selectAllUser" resultMap="UserBaseMap">
        SELECT * FROM users
    </select>

</mapper>